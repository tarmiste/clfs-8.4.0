<screen os="b"><userinput>CC="gcc ${BUILDN32}" ./configure \
    --prefix=/usr \
    --libdir=/usr/lib32 \
            --enable-shared     \
            --with-system-expat \
            --with-system-ffi   \
            --with-ensurepip=yes</userinput></screen>

    <xi:include xmlns:xi="http://www.w3.org/2001/XInclude"
